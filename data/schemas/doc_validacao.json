{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "aprovado",
        "revisao_humana",
        "reprovado"
      ]
    },
    "score_risco": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "campos_extraidos": {
      "type": "object"
    },
    "hash_evidencias": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "status",
    "score_risco"
  ]
}